;Lösung 2

(define (euler-n n)
  (define (iter k term sum)  ; k--> su an hangi termi hesapliyoruz(baslangic 0)
    (if (> k n)              ; term--> o anda elimizdeki terim 1/k!
        sum                  ; sum--> o ana kadar toplanmis toplam
        (iter (+ k 1)
              (/ term (+ k 1))
              (+ sum term ))))
  (iter 0 1.0 0.0))
  

(euler-n 0)
(euler-n 1)
(euler-n 2)
(euler-n 27)






           

(define (erste-ziffer n)
  (if (< n 10)
      n
      (erste-ziffer (quotient n 10))))

(define (letzte-ziffer n)
  (remainder n 10))

(define (gleiche-ziffern zahl)
  (if (= (erste-ziffer zahl) (letzte-ziffer zahl))
      zahl
      (gleiche-ziffern (+ zahl 1))))



(gleiche-ziffern 123)

;Aufgabe2

(define (vergleich zahl op)
  (if (< zahl 10)
      #f
      (iter zahl 0 op)))

(define (iter zahl count op)
  (if (< zahl 10)
      count
      (let ((a (remainder zahl 10))                ; en sağdaki rakam
            (b (remainder (quotient zahl 10) 10))) ; onun solundaki rakam
        (iter (quotient zahl 10)
              (if (op b a)                         ; sırayla (b, a)
                  (+ count 1)
                  count)
              op))))

